{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker compose up",
      "type": "shell",
      "command": "docker-compose up",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "todo-api cli",
      "type": "shell",
      "command": "cd ./todo-api; pwsh -NoExit",
      "options": {
        "executable": "pwsh",
        "args": ["-Command"]
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "todo-ui cli",
      "type": "shell",
      "command": "cd ./todo-ui; pwsh -NoExit",
      "options": {
        "executable": "pwsh",
        "args": ["-Command"]
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "todo-api",
      "type": "shell",
      "command": "cd ./todo-api; yarn build;",
      "options": {
        "executable": "pwsh",
        "args": ["-Command"]
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "todo-ui",
      "type": "shell",
      "command": "cd ./todo-ui; yarn build;",
      "options": {
        "executable": "pwsh",
        "args": ["-Command"]
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    }
  ]
}
