{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker compose up",
      "type": "shell",
      "command": "docker compose up",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "build-api",
      "type": "shell",
      "command": "start-sleep -seconds 5; cd ./todo-api; yarn build; yarn generate:client;",
      "options": {
        "executable": "pwsh",
        "args": ["-Command"]
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "build-ui",
      "type": "shell",
      "command": "cd ./todo-ui; yarn build;",
      "options": {
        "executable": "pwsh",
        "args": ["-Command"]
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "dependsOn": ["build-api"]
    }
  ]
}
