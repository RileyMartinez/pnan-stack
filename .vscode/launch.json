{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ui: launch",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/todo-ui/"
    },
    {
      "type": "api: attach",
      "request": "attach",
      "name": "nest",
      "port": 9229,
      "protocol": "inspector",
      "address": "0.0.0.0",
      "restart": true,
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/todo-api/",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
